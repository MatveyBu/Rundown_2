<div class="card mb-4 shadow-sm" style="width: 28rem;">
    <div class="card-body">

        {{!-- Post text (SQL column: text) --}}
        {{#if text}}
        <p class="card-text">{{text}}</p>
        {{/if}}

        {{!-- Author (SQL: user_id) --}}
        {{#if author}}
        <p class="text-muted mb-0">
            <small>Posted by {{author}}</small>
        </p>
        {{/if}}

        {{!-- Timestamp (SQL column: created_at) --}}
        {{#if created_at}}
        <p class="text-muted mb-0">
            <small>{{created_at}}</small>
        </p>
        {{/if}}
    </div>
</div>
