{{! Profile page wrapper with CU color bg}}
<section class="profile-wrap">
  <div class="container">
    <div class="row justify-content-center mt-4 mb-5">
      <div class="col-12 col-md-10 col-lg-8">
        {{! Page title and back to home button}}
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="d-flex align-items-center gap-3">
            
            <div>
              <h2>Your Rundown Profile</h2>
            </div>
          </div>
          <a href="/home" class="btn btn-outline-cu btn-sm" >Return to Home Page</a>
        </div>
        {{! Profile card with user info and edit form}}
        <div class="card profile-card shadow-sm" >
          <div class="card-body p-4 p-md-5">
            {{! User info section}}
            <div class="d-flex align-items-center gap-4 mb-4" >
              {{#if user.profile_picture}}
                <img src="{{user.profile_picture}}" alt="PFP" class="pfp">
              {{else}}
                <div class="pfp-fallback">
                  {{#if user.name}}{{substring user.name 0 1}}{{else}}U{{/if}}
                </div>
              {{/if}}
              {{! User details}}
              <div>
                <div>
                    <span class="h5 mb-0 fw-bold" >{{user.name}}</span>
                    <span class="fw-semibold small">{{user.username}}</span>
                </div>
                
                <div class="text-secondary small fw-bold" >{{user.role}}</div>
                <div class="text-secondary small">{{user.email}}</div>
              
              </div>
            </div>
            {{! messages for save success or error}}
            {{#if saved}}<div class="alert alert-success">Changes have been saved.</div>{{/if}}
            {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}

            <form action="/profile" method="POST" class="row g-3">
              <div class="col-12">

                
                <label for="avatar_url" class="form-label">Profile Image URL</label>
                <input id="avatar_url" name="avatar_url" type="url" class="form-control" placeholder="https://example.com/..." value="{{user.profile_picture}}">
              </div>

              <div class="col-12">
                <label for="bio" class="form-label">Bio</label>
                
                <textarea id="bio" name="bio" class="form-control" rows="4">{{user.bio}}</textarea>
              </div>

              <div class="col-12">
                
                <button type="submit" class="btn btn-cu w-100">Save Changes</button>
              </div>
            
            </form>
            {{! adding section to change password}}
            <hr class="my-4">
            <div class="mb-3">
              <button type="button" id="password-toggle" class="btn btn-outline-cu btn-sm">Change Password</button>
              <div id="password-section" class="mt-3 d-none">
                <form action="/profile/change-password" method="POST" class="row g-3">
                  <div class="col-12">
                    <label for="current_password" class="form-label">Current Password</label>
                    <input id="current_password" name="current_password" type="password" class="form-control" required>
                  </div>
                  <div class="col-12">
                    <label for="new_password" class="form-label">New Password</label>
                    <input id="new_password" name="new_password" type="password" class="form-control" required>
                  </div>
                  <div class="col-12">
                    <label for="confirm_password" class="form-label">Confirm New Password</label>
                    <input id="confirm_password" name="confirm_password" type="password" class="form-control" required>
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-cu w-100">Update Password</button>
                  </div>
                </form>
              </div>
            </div>
            {{! change name and username section}}
            <hr class="my-4">
            <div class="mb-3">
              <button type="button" id="name-toggle" class="btn btn-outline-cu btn-sm">
                Edit Name / Username
              </button>
              <div id="name-section" class="mt-3 d-none">
                <form action="/profile/change-name" method="POST" class="row g-3">
                  <div class="col-12 col-md-6">
                    <label for="first_name" class="form-label">First Name</label>
                    <input id="first_name" name="first_name" type="text" class="form-control" value="{{user.first_name}}">
                  </div>
                  <div class="col-12 col-md-6">
                    <label for="last_name" class="form-label">Last Name</label>
                    <input id="last_name" name="last_name" type="text" class="form-control" value="{{user.last_name}}">
                  </div>
                  <div class="col-12">
                    <label for="new_username" class="form-label">Username</label>
                    <input id="new_username" name="new_username" type="text" class="form-control" value="{{user.username}}">
                  </div>
                  <div class="col-12">
                    <button type="submit" class="btn btn-cu w-100">Update Name / Username</button>
                  </div>
                </form>
              </div>
            </div>
            {{! scripts to toggle password and name sections}}
            <script>
              //pw
              (function () {
                var btn = document.getElementById('password-toggle');
                if (btn) {
                  btn.addEventListener('click', function () {
                    var section = document.getElementById('password-section');
                    if (section) {
                      section.classList.toggle('d-none');
                    }
                  });
                }
              })();

              //name and un
              (function () {
                var btn2 = document.getElementById('name-toggle');
                if (btn2) {
                  btn2.addEventListener('click', function () {
                    var section2 = document.getElementById('name-section');
                    if (section2) {
                      section2.classList.toggle('d-none');
                    }
                  });
                }
              })();
            </script>
          </div>
        </div>
        {{> footer}}
      </div>
    </div>
  </div>
</section>
