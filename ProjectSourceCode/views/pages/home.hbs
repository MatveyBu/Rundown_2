<div class="home-wrapper">
  <!-- Profile Header -->
  <div class="profile-header">
    <div class="container">
      <div class="profile-nav">
        <div class="profile-logo">
          <img src="/rundown.png" alt="Rundown Logo" height="40" onclick="window.location.href='/home'"
            onmouseover="this.style.cursor='pointer'" />
          <span onmouseover="this.style.cursor='pointer'" onclick="window.location.href='/home'">Rundown</span>
          <a href="/communities" class="btn btn-outline-cu btn-sm ms-2">Communities</a>
        </div>
        <div class="profile-user">
          <div class="user-info">
            <div class="user-avatar">
              {{#if user.profile_picture}}
              <img src="{{user.profile_picture}}" alt="PFP" class="rounded-circle" width="36" height="36"
                style="object-fit:cover;" />
              {{else}}
              {{#if user.name}}
              {{substring user.name 0 1}}
              {{else}}
              U
              {{/if}}
              {{/if}}
            </div>

            <div class="user-details">
              <div class="user-name" onmouseover="this.style.cursor='pointer'"
                onclick="window.location.href='/profile'">{{user.name}}</div>
              <div class="user-role">{{user.role}}</div>
            </div>
          </div>
          <a href="/logout" class="btn btn-sm btn-outline-cu">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <img class="hero-logo"
          src="https://upload.wikimedia.org/wikipedia/en/thumb/d/d3/Colorado_Buffaloes_logo.svg/1200px-Colorado_Buffaloes_logo.svg.png"
          alt="CU Boulder Logo" referrerpolicy="no-referrer" />
        <h1 class="hero-title">Welcome to Rundown</h1>
        <p class="hero-subtitle">Connect with your CU Boulder community</p>
        <p class="hero-description">
          Your secure platform for housing, clubs, classes, and campus-wide communities
        </p>
        <div class="hero-actions">
          <a href="/explore" class="btn btn-primary-cu">Explore Communities</a>
          <a href="/profile" class="btn btn-secondary-cu">My Profile</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="quick-links-section">
    <div class="container">
      <h2 class="section-title">Quick Access</h2>
      <div class="quick-links-grid">
        <a href="/communities/1" class="quick-link-card">
          <div class="card-icon">üè†</div>
          <h3>Housing</h3>
          <p>Find subleases and roommates</p>
        </a>
        <a href="/communities/2" class="quick-link-card">
          <div class="card-icon">üÜî</div>
          <h3>Lost & Found</h3>
          <p>Lost student ID cards</p>
        </a>
        <a href="/communities/3" class="quick-link-card">
          <div class="card-icon">üéØ</div>
          <h3>Clubs & Sports</h3>
          <p>Join campus organizations</p>
        </a>
        <a href="/communities/4" class="quick-link-card">
          <div class="card-icon">üìö</div>
          <h3>Classes</h3>
          <p>Connect with classmates</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Recent Activity Section -->
  <section class="activity-section">
    <div class="container">
      <h2 class="section-title">Recent Activity</h2>
      <div class="activity-list">
        {{#if recentPosts}}
        {{#each recentPosts}}
        <div class="activity-card">
          <div class="activity-header">
            <span class="activity-community">{{community_name}}</span>
            <span class="activity-time">{{formatDate created_at}}</span>
          </div>
          <h4 class="activity-title">{{text}}</h4>
          {{#if image}}
          <img src="{{image}}" alt="Post image" class="img-fluid rounded mt-2"
            style="max-height: 400px; object-fit: contain;">
          {{/if}}
        </div>
        {{/each}}
        {{else}}
        <p class="text-muted">No recent activity in your communities.</p>
        {{/if}}
      </div>
      <div class="text-center mt-4">
        <a href="/activity" class="btn btn-outline-cu">View All Activity</a>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <div class="stats-grid">
        <div class="stat-item">
          <div class="stat-number">2,500+</div>
          <div class="stat-label">Active Students</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">50+</div>
          <div class="stat-label">Communities</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">1,000+</div>
          <div class="stat-label">Posts Today</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">100%</div>
          <div class="stat-label">CU Boulder</div>
        </div>
      </div>
    </div>
  </section>
</div>